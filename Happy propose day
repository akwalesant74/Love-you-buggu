    <script>
        // --- CONFIGURATION ---
        const notes = {
            1: { 
                title: "Our Beautiful Past üíå", 
                text: "Dhruvi, from the moment I saw your smile, my heart knew you were special. Those late-night talks and stolen glances are my greatest treasures. You've always been my joy.", 
                img: "https://media.giphy.com/media/3o7btPCcdNniyf0ArS/giphy.gif" 
            },
            2: { 
                title: "Magic of Meeting ‚ú®", 
                text: "Before you, life was just existing. Then you walked in. That first 'Hi', your shy smile... Meeting you wasn't a coincidence, Buggu, it was destiny writing our story.", 
                img: "https://media.giphy.com/media/T86i6yDyOYz7J6vapb/giphy.gif" 
            },
            3: { 
                title: "Our Perfect Present üåπ", 
                text: "Today, holding your hand feels like winning the universe. Your texts make me smile, your hugs heal everything. I love you more than words can say.", 
                img: "https://media.giphy.com/media/MDJ9IbxxvDUQM/giphy.gif" 
            }
        };

        let noCount = 0;
        let giftsOpened = 0;
        let clickedGifts = [false, false, false];
        let isMusicPlaying = false;

        // --- FUNCTIONS ---

        // 1. Music Toggle
        function toggleMusic() {
            const audio = document.getElementById('bg-music');
            const btn = document.getElementById('music-btn');
            
            if (!isMusicPlaying) {
                audio.play().catch(e => alert("Tap anywhere on screen first to allow music!"));
                btn.innerText = "‚è∏ Pause Music";
                isMusicPlaying = true;
            } else {
                audio.pause();
                btn.innerText = "üéµ Play Music";
                isMusicPlaying = false;
            }
        }

        // 2. Runaway No Button
        function moveNoBtn() {
            const btn = document.getElementById('noBtn');
            const txt = document.querySelector('#screen-1 h1');
            
            // Random position calculated safely within viewport
            const x = Math.random() * (window.innerWidth - 120);
            const y = Math.random() * (window.innerHeight - 60);
            
            btn.style.position = 'fixed';
            btn.style.left = x + 'px';
            btn.style.top = y + 'px';
            
            noCount++;
            if (noCount > 2) {
                btn.innerText = "Just say YES! ü•∫";
                txt.innerText = "Please Buggu? ü•∫";
            }
        }

        // 3. Stage Transitions
        function goToStage2() {
            document.getElementById('screen-1').classList.add('hidden');
            document.getElementById('screen-2').classList.remove('hidden');
            createBackgroundHearts();
        }

        function goToStage3() {
            document.getElementById('screen-2').classList.add('hidden');
            document.getElementById('screen-3').classList.remove('hidden');
            launchConfetti();
        }

        // 4. Gift Logic
        function openGift(id) {
            // Update Modal
            const note = notes[id];
            document.getElementById('modal-title').innerText = note.title;
            document.getElementById('modal-body').innerText = note.text;
            document.getElementById('modal-img').src = note.img;
            document.getElementById('modal-overlay').style.display = 'flex';

            // Track Progress
            if (!clickedGifts[id-1]) {
                clickedGifts[id-1] = true;
                giftsOpened++;
                document.getElementById('progress-text').innerText = `${giftsOpened}/3 Opened`;
            }
        }

        function closeModal() {
            document.getElementById('modal-overlay').style.display = 'none';
            if (giftsOpened === 3) {
                document.getElementById('final-btn').classList.remove('hidden');
            }
        }

        // 5. Visual Effects
        function createBackgroundHearts() {
            const container = document.getElementById('hearts-container');
            setInterval(() => {
                const heart = document.createElement('div');
                heart.classList.add('heart-float');
                heart.innerHTML = "‚ù§Ô∏è";
                heart.style.left = Math.random() * 100 + 'vw';
                heart.style.animationDuration = (Math.random() * 3 + 4) + 's';
                heart.style.fontSize = (Math.random() * 20 + 10) + 'px';
                container.appendChild(heart);
                setTimeout(() => heart.remove(), 6000);
            }, 500);
        }

        function launchConfetti() {
            // Create intense confetti burst
            for(let i=0; i<50; i++) {
                const heart = document.createElement('div');
                heart.innerHTML = ["üåπ", "‚ù§Ô∏è", "üíç", "‚ú®"][Math.floor(Math.random() * 4)];
                heart.style.position = 'fixed';
                heart.style.left = Math.random() * 100 + 'vw';
                heart.style.top = '-10px';
                heart.style.fontSize = '24px';
                heart.style.zIndex = '1000';
                heart.style.animation = `fall ${Math.random() * 2 + 2}s linear forwards`;
                document.body.appendChild(heart);
            }
        }

        // CSS for falling confetti
        const style = document.createElement('style');
        style.innerHTML = `@keyframes fall { to { transform: translateY(100vh) rotate(360deg); } }`;
        document.head.appendChild(style);

    </script>
</body>
